<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/round_18"
    android:orientation="vertical">


    <com.spf.panditji.view.RoundRectCornerImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/abhilash" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/pooja_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buddha Puja"
            android:textColor="@color/white"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/book_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/toolbar_gradient_round"
            android:padding="10dp"
            android:text="Book now"
            android:textAllCaps="true"
            android:textColor="@color/white" />


    </LinearLayout>


</FrameLayout>