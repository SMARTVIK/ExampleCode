<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#F8F8F8"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".view.DetailScreen"
        tools:showIn="@layout/activity_detail_screen">

  <LinearLayout

          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
              app:cardBackgroundColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

          <LinearLayout
                  android:layout_margin="20dp"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">


              <TextView
                      android:id="@+id/name"
                      android:layout_marginBottom="10dp"
                      android:textSize="28dp"
                      android:text="Full Vivah Puja"
                      android:fontFamily="sans-serif-medium"
                      android:textColor="@color/text_232323"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

              <LinearLayout
                      android:layout_marginBottom="5dp"
                      android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

                  <LinearLayout
                          android:id="@+id/one_star"
                          android:visibility="gone"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                      <ImageView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@drawable/star" />

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_height="wrap_content"/>

                  </LinearLayout>

                  <LinearLayout
                          android:visibility="gone"
                          android:id="@+id/two_star"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                      <ImageView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@drawable/star" />

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_height="wrap_content"/>

                  </LinearLayout>

                  <LinearLayout
                          android:visibility="gone"
                          android:id="@+id/three_star"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                      <ImageView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@drawable/star" />

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_height="wrap_content"/>

                  </LinearLayout>

                  <LinearLayout
                          android:visibility="gone"
                          android:id="@+id/four_star"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                      <ImageView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@drawable/star" />

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star_inactive"
                              android:layout_height="wrap_content"/>

                  </LinearLayout>

                  <LinearLayout
                          android:id="@+id/five_star"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                      <ImageView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@drawable/star" />

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>

                      <ImageView
                              android:layout_width="wrap_content"
                              android:src="@drawable/star"
                              android:layout_height="wrap_content"/>

                  </LinearLayout>


              </LinearLayout>

              <TextView
                      android:id="@+id/amount"
                      android:layout_marginTop="10dp"
                      android:textSize="20dp"
                      android:text="₹2100"
                      android:fontFamily="sans-serif-medium"
                      android:textColor="@color/green"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

              <TextView
                      android:text="Annaprashan is a Sanskrit word which means grain initiat or rice feeding. This means introducing solid food for the baby for the first time. Usually done after the Namakarana is considered very auspicious as the baby can have solid foods. The child is usually fed with very small quantities of Rice or Sweet payasam."
                      android:id="@+id/description"
                      android:textColor="@color/darkBlack"
                      android:fontFamily="sans-serif"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>


          </LinearLayout>



      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
              android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

          <androidx.viewpager.widget.ViewPager
                  android:id="@+id/pager"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>


      </androidx.cardview.widget.CardView>

  </LinearLayout>

</androidx.core.widget.NestedScrollView>