<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.SignUpActivity">

    <RelativeLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:id="@+id/header_layout"
        android:background="@drawable/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:src="@drawable/back_icon"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/title_address"
            android:text="Add Details"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_title"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/header_layout"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/darkBlack"
            android:hint="Name"
            android:padding="@dimen/email_padding"
            android:background="@drawable/email_bg"
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/darkBlack"
            android:hint="Mobile"
            android:padding="@dimen/email_padding"
            android:background="@drawable/email_bg"
            android:inputType="number"
            android:id="@+id/mobile_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginLeft="5dp"
            android:textColor="@color/darkBlack"
            android:hint="House ,street, etc"
            android:padding="@dimen/email_padding"
            android:background="@drawable/email_bg"
            android:id="@+id/address_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginLeft="5dp"
            android:textColor="@color/darkBlack"
            android:hint="City"
            android:padding="@dimen/email_padding"
            android:background="@drawable/email_bg"
            android:id="@+id/city_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginLeft="5dp"
            android:textColor="@color/darkBlack"
            android:hint="State"
            android:padding="@dimen/email_padding"
            android:background="@drawable/email_bg"
            android:id="@+id/state_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginLeft="5dp"
            android:textColor="@color/darkBlack"
            android:hint="Landmark"
            android:padding="@dimen/email_padding"
            android:background="@drawable/email_bg"
            android:id="@+id/landmark_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginLeft="5dp"
            android:textColor="@color/darkBlack"
            android:hint="Pin-Code"
            android:padding="@dimen/email_padding"
            android:background="@drawable/email_bg"
            android:id="@+id/pincode_edit_text"
            android:inputType="number"
            android:maxLength="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="15dp"
            android:id="@+id/add_button"
            android:padding="15dp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/sign_in_gradient"
            android:layout_marginTop="25dp"
            android:text="Add Address"
            android:textSize="@dimen/text_sign_in"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>